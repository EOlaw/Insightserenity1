<!-- views/layouts/dashboard.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Dashboard - InsightSerenity' %></title>
    
    <!-- Favicon -->
    <link rel="shortcut icon" href="/public/img/favicon.ico" type="image/x-icon">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#ffc451',
                        secondary: '#212529',
                        dark: '#000000',
                        light: '#f8f9fa',
                        'primary-light': '#ffe082',
                        'primary-dark': '#e6ac00'
                    },
                    fontFamily: {
                        sans: ['Poppins', 'sans-serif'],
                        heading: ['Montserrat', 'sans-serif']
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800;900&display=swap" rel="stylesheet">
    
    <!-- Custom styles -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            color: #212529;
            background-color: #f8f9fa;
        }
        .btn-primary {
            background-color: #ffc451;
            border-color: #ffc451;
            color: #000000;
        }
        .btn-primary:hover {
            background-color: #e6ac00;
            border-color: #e6ac00;
            color: #000000;
        }
        .text-primary {
            color: #ffc451 !important;
        }
        .bg-primary {
            background-color: #ffc451 !important;
        }
        .sidebar {
            background-color: #212529;
            min-height: calc(100vh - 60px);
        }
        .sidebar-link {
            color: #ced4da;
            text-decoration: none;
            display: flex;
            align-items: center;
            padding: 12px 16px;
            transition: all 0.3s;
            border-radius: 4px;
            margin-bottom: 4px;
        }
        .sidebar-link:hover, .sidebar-link.active {
            background-color: rgba(255, 196, 81, 0.15);
            color: #ffc451;
        }
        .sidebar-link i {
            margin-right: 10px;
        }
        .main-content {
            min-height: calc(100vh - 60px);
        }
        .card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }
    </style>
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
    
    <!-- Additional CSS -->
    <% if(typeof additionalCSS !== 'undefined') { %>
        <%- additionalCSS %>
    <% } %>
</head>
<body class="min-h-screen flex flex-col">
    <!-- Header -->
    <%- include('../partials/header') %>
    
    <div class="flex flex-grow">
        <!-- Sidebar -->
        <%- include('../partials/sidebar') %>
        
        <!-- Main content -->
        <main class="flex-grow p-4 md:p-6">
            <div class="container mx-auto">
                <!-- Alert messages -->
                <%- include('../partials/alerts') %>
                
                <!-- Page content -->
                <%- body %>
            </div>
        </main>
    </div>
    
    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Loading Overlay -->
    <%- include('../partials/loading') %>
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Initialize Lucide icons -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
    
    <!-- Additional JavaScript -->
    <% if(typeof additionalJS !== 'undefined') { %>
        <%- additionalJS %>
    <% } %>
</body>
</html>