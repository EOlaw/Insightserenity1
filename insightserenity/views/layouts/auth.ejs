<!-- views/layouts/auth.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Authentication - InsightSerenity' %></title>
    
    <!-- Favicons -->
    <link rel="shortcut icon" href="/img/favicon_io/apple-touch-icon.png" type="image/x-icon">
    <link rel="icon" href="/img/favicon_io/favicon-16x16.png" sizes="16x16">
    <link rel="icon" href="/img/favicon_io/favicon-32x32.png" sizes="32x32">
    <link rel="icon" href="/img/favicon_io/android-chrome-192x192.png" sizes="192x192">
    <link rel="icon" href="/img/favicon_io/android-chrome-512x512.png" sizes="512x512">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#ffc451',
                        secondary: '#212529',
                        dark: '#000000',
                        light: '#f8f9fa',
                        'primary-light': '#ffe082',
                        'primary-dark': '#e6ac00'
                    }
                }
            }
        }
    </script>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800;900&display=swap" rel="stylesheet">
    
    <!-- Custom styles -->
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }
        .auth-card {
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .auth-sidebar {
            background-color: #000000;
            background-image: linear-gradient(135deg, #000000 0%, #212529 100%);
            color: white;
        }
        .brand-highlight {
            color: #ffc451;
        }
        .btn-primary {
            background-color: #ffc451;
            border-color: #ffc451;
            color: #000000;
            font-weight: 500;
        }
        .btn-primary:hover {
            background-color: #e6ac00;
            border-color: #e6ac00;
            color: #000000;
        }
        .form-control:focus {
            border-color: #ffc451;
            box-shadow: 0 0 0 0.25rem rgba(255, 196, 81, 0.25);
        }
    </style>
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="container max-w-6xl">
        <div class="auth-card bg-white flex flex-col md:flex-row">
            <!-- Auth sidebar with branding -->
            <div class="auth-sidebar hidden md:flex md:w-2/5 p-8 flex-col justify-between">
                <div>
                    <h1 class="text-2xl font-bold mb-6">Insight<span class="brand-highlight">Serenity</span></h1>
                    
                    <% if (typeof pageContext === 'undefined' || pageContext === 'login') { %>
                        <!-- Login context -->
                        <h2 class="text-3xl font-bold mb-4">Welcome Back!</h2>
                        <p class="text-gray-300 mb-6">Access your account to manage your profile, organizations, and more.</p>
                    <% } else if (pageContext === 'register' || pageContext === 'register-client') { %>
                        <!-- Registration context -->
                        <h2 class="text-3xl font-bold mb-4">Join Us Today</h2>
                        <p class="text-gray-300 mb-6">Create your account and unlock the full potential of our platform.</p>
                    <% } else if (pageContext === 'register-consultant') { %>
                        <!-- Consultant Registration context -->
                        <h2 class="text-3xl font-bold mb-4">Become a Consultant</h2>
                        <p class="text-gray-300 mb-6">Share your expertise and connect with clients who need your skills.</p>
                    <% } else if (pageContext === 'forgot-password') { %>
                        <!-- Forgot password context -->
                        <h2 class="text-3xl font-bold mb-4">Password Recovery</h2>
                        <p class="text-gray-300 mb-6">We'll help you regain access to your account securely.</p>
                    <% } else if (pageContext === 'reset-password') { %>
                        <!-- Reset password context -->
                        <h2 class="text-3xl font-bold mb-4">Create New Password</h2>
                        <p class="text-gray-300 mb-6">Choose a strong password to secure your account.</p>
                    <% } else if (pageContext === 'verification') { %>
                        <!-- Email verification context -->
                        <h2 class="text-3xl font-bold mb-4">Verify Your Account</h2>
                        <p class="text-gray-300 mb-6">Complete your account setup to access all features.</p>
                    <% } else if (pageContext === 'success') { %>
                        <!-- Success context -->
                        <h2 class="text-3xl font-bold mb-4">Success!</h2>
                        <p class="text-gray-300 mb-6">Your action has been completed successfully.</p>
                    <% } else { %>
                        <!-- Default/fallback context -->
                        <h2 class="text-3xl font-bold mb-4">Account Access</h2>
                        <p class="text-gray-300 mb-6">Manage your InsightSerenity account securely.</p>
                    <% } %>
                </div>
                
                <div>
                    <div class="flex items-center mb-4">
                        <i data-lucide="shield-check" class="w-5 h-5 mr-2 text-primary"></i>
                        <span>Secure authentication</span>
                    </div>
                    <div class="flex items-center mb-4">
                        <i data-lucide="users" class="w-5 h-5 mr-2 text-primary"></i>
                        <span>Organization management</span>
                    </div>
                    <div class="flex items-center">
                        <i data-lucide="layers" class="w-5 h-5 mr-2 text-primary"></i>
                        <span>Professional portfolios</span>
                    </div>
                </div>
                
                <div class="text-sm text-gray-400">
                    Â© <%= new Date().getFullYear() %> InsightSerenity. All rights reserved.
                </div>
            </div>
            
            <!-- Auth content -->
            <div class="p-8 md:w-3/5">
                <!-- Alert messages -->
                <%- include('../partials/alerts') %>
                
                <!-- Auth content -->
                <%- body %>
            </div>
        </div>
    </div>
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Initialize Lucide icons -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
    
    <!-- Additional JavaScript -->
    <% if(typeof additionalJS !== 'undefined') { %>
        <%- additionalJS %>
    <% } %>
</body>
</html>